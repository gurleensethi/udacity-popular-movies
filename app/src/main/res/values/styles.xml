<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/raleway_regular</item>
    </style>

    <style name="DetailSectionHeadingTextView">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="GreenOutlineButton">
        <item name="android:background">@drawable/button_outline_green</item>
        <item name="android:textColor">@color/green</item>
    </style>

    <style name="GreenOutlineToggleButton">
        <item name="android:background">@drawable/toggle_button_outline_green</item>
        <item name="android:textColor">@drawable/toggle_button_outline_green</item>
    </style>

    <style name="OptionsSortButton">
        <item name="android:background">@color/green_dark</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:foreground">?selectableItemBackground</item>
        <item name="android:textAllCaps">false</item>
    </style>

</resources>
